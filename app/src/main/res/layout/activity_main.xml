<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lisa.bmi6.MainActivity">

    <TextView
        android:id="@+id/ed_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="weight"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/ed_weight"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/ed_weight" />

    <EditText
        android:id="@+id/ed_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/ed_height"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/ed_height" />

    <TextView
        android:id="@+id/ed_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="height"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="111dp" />

    <EditText
        android:id="@+id/ed_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/ed_height"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/ed_height" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="bmi"
        android:text="calculate"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/ed_height"
        android:layout_marginLeft="-28dp"
        app:layout_constraintLeft_toLeftOf="@+id/ed_height" />

</android.support.constraint.ConstraintLayout>
